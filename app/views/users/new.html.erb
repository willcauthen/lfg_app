
<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
	Username: <%= f.text_field :username %> <br>
    First name: <%= f.text_field :first_name %> <br>
    Last name: <%= f.text_field :last_name %> <br>
	Email: <%= f.text_field :email %> <br>
    Zipcode: <%= f.text_field :city %> <br>
    Age: <%= f.text_field :age %> <br>
    Description: <%= f.text_area :description %> <br>
    Password: <%= f.password_field :password %> <br>
    Avatar: <%= f.file_field :avatar %> <br>

    <% @genres.each do |genre| %>
	<input type="checkbox" name="<%=genre.name%>" value="<%=genre.name%>"  > <%=genre.name%> <br>
	<% end %> 
    <%= f.submit "Sign Up" %>
<% end %>